<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Contact dark theme -->
    <style name="page_background_dr">
        <item name="android:background">@color/primary</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
    </style>

    <style name="edit_text_dr">
        <item name="android:paddingLeft">@dimen/edittext_margin_left</item>
        <item name="android:paddingRight">@dimen/edittext_margin_right</item>
        <item name="android:paddingTop">@dimen/edittext_margin_top</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="text_subheader_dr">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">@dimen/text_subheader_text_size</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#000</item>
    </style>

    <style name="text_large_dr">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#888</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_regular_dr">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="button_dr" parent="text_large_dr">
        <item name="android:background">@drawable/button_dr</item>
    </style>

    <style name="horizontal_line_dr">
        <item name="android:background">@color/divider</item>
    </style>

    <style name="action_bar_dr" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/primary_dark</item>
    </style>

</resources>
